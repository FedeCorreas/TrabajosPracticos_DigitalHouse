<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%-include('./partials/head') %>
<!-- Fin head -->
<body>
	<!-- Header -->
	<%-include('./partials/header') %>
	<!-- Fin header -->

	<!-- Banner -->
	<div class="banner"></div>
	<!-- Fin banner -->

	<!-- Última visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% for(product of productosAMostrar) { %>
				<%if (product.category=="in-sale"){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/detail/<%= product.id %>/in-sale">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2>$<%=product.price %></h2>
									<span><%= product.discount %>% OFF</span>}
									<p><%= product.name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
					<%}%>
					<%}%>
				</div>
			</div>
			<!-- Fin última visita -->
			<!-- Ofertas -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Basado en tu última visita</h2>
					</div>
					<% for(product of productosAMostrar) { %>
						<%if (product.category=="visited"){ %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/product/detail/<%= product.id %>/visited">
										<figure class="product-box_image">
											<img src="/images/products/<%= product.image %>" alt="imagen de producto">
										</figure>
										<article class="product-box_data">
											<h2>$<%=product.price %></h2>
											<span><%= product.discount %>% OFF</span>
											<p><%= product.name %></p>
											<i class="fas fa-truck"></i>
										</article>
									</a>
								</section>
							</div>
							<% }%>
							<% }%>
						</div>
					</div>
		<!-- Fin ofertas -->
		<!-- footer -->
		<%-include('./partials/footer')%>
		<!-- Fin footer -->
	</body>
</html>
